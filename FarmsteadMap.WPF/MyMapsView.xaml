<UserControl x:Class="FarmsteadMap.WPF.MyMapsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FarmsteadMap.WPF"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000"
             Background="WhiteSmoke"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style x:Key="ContextMenuButton" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#11000000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <TextBlock Text="···" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       FontSize="16"
                                       Margin="0,-5,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MapTile" TargetType="Border">
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="180"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="Black" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="MapItemTemplate">
            <Border Style="{StaticResource MapTile}">
                <Grid>
                    <Image Source="{Binding ImageUrl}" Stretch="UniformToFill" Margin="0,0,0,40">
                        <Image.OpacityMask>
                            <VisualBrush>
                                <VisualBrush.Visual>
                                    <Border Background="Black" CornerRadius="8,8,0,0"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Image.OpacityMask>
                    </Image>

                    <TextBlock Text="{Binding Name}" 
                               FontSize="16" FontWeight="SemiBold" 
                               VerticalAlignment="Bottom" Margin="10,0,10,10"/>

                    <Button Style="{StaticResource ContextMenuButton}" 
                            HorizontalAlignment="Right" VerticalAlignment="Top" 
                            Margin="10" Click="ContextMenuButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Перейменувати" Click="RenameMenuItem_Click"/>
                                <MenuItem Header="Видалити" Click="DeleteMenuItem_Click"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel Margin="10">

                <ItemsControl x:Name="MapItemsControl"
                              ItemTemplate="{StaticResource MapItemTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <Border Style="{StaticResource MapTile}" 
                        Background="#F0F0F0"
                        BorderBrush="#DDD"
                        BorderThickness="2"
                        Cursor="Hand"
                        MouseLeftButtonUp="AddMapTile_MouseUp">
                    <Path Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M17,13H13V17H11V13H7V11H11V7H13V11H17V13Z"
                          Fill="#999" 
                          Width="80" Height="80" 
                          Stretch="Uniform"/>
                </Border>

            </WrapPanel>
        </ScrollViewer>

        <Grid x:Name="AddMapPopup" 
              Background="#88000000" 
              Visibility="Collapsed">

            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Width="400">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.5"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock x:Name="PopupTitle" 
                               Text="Створити нову мапу" 
                               FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="Введіть назву:" Margin="0,10,0,5"/>
                    <TextBox x:Name="NewMapNameTextBox" FontSize="16" Padding="5"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button x:Name="CancelMapButton" 
                                Content="Скасувати" 
                                Padding="10,5" 
                                Margin="10,0"
                                Click="CancelMapButton_Click"/>
                        <Button x:Name="CreateMapButton" 
                                Content="Створити" 
                                FontWeight="Bold" 
                                Padding="10,5"
                                Click="CreateMapButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>