<UserControl x:Class="FarmsteadMap.WPF.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FarmsteadMap.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#D9534F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C9302C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SettingsCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="Black" Opacity="0.05"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="25,20,25,15"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#007ACC" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingsPasswordBox" TargetType="PasswordBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,10,10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#007ACC" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardFooter" TargetType="Border">
            <Setter Property="Background" Value="#FDFDFD"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="BorderBrush" Value="#EEE"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="CornerRadius" Value="0,0,8,8"/>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

        <StackPanel HorizontalAlignment="Center" Width="800" Margin="20">

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel>
                    <TextBlock Text="Профіль" Style="{StaticResource SectionTitle}"/>
                    <StackPanel Margin="25,0,25,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Ім'я" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="FirstNameTextBox" Style="{StaticResource SettingsTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Прізвище" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="LastNameTextBox" Style="{StaticResource SettingsTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Ім'я користувача (username)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="UsernameTextBox" Style="{StaticResource SettingsTextBox}"/>

                        <TextBlock Text="Email" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="EmailTextBox" Style="{StaticResource SettingsTextBox}"/>
                    </StackPanel>

                    <Border Style="{StaticResource CardFooter}">
                        <Button Content="Зберегти профіль" Style="{StaticResource PrimaryButton}" 
                                HorizontalAlignment="Right" 
                                Click="SaveProfile_Click"/>
                    </Border>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel>
                    <TextBlock Text="Безпека та пароль" Style="{StaticResource SectionTitle}"/>
                    <StackPanel Margin="25,0,25,20">
                        <TextBlock Text="Старий пароль" Style="{StaticResource FieldLabel}"/>
                        <PasswordBox x:Name="OldPasswordBox" Style="{StaticResource SettingsPasswordBox}"/>

                        <TextBlock Text="Новий пароль" Style="{StaticResource FieldLabel}"/>
                        <PasswordBox x:Name="NewPasswordBox" Style="{StaticResource SettingsPasswordBox}"/>

                        <TextBlock Text="Підтвердіть новий пароль" Style="{StaticResource FieldLabel}"/>
                        <PasswordBox x:Name="ConfirmNewPasswordBox" Style="{StaticResource SettingsPasswordBox}"/>
                    </StackPanel>

                    <Border Style="{StaticResource CardFooter}">
                        <Button Content="Змінити пароль" Style="{StaticResource PrimaryButton}" 
                                HorizontalAlignment="Right" 
                                Click="ChangePassword_Click"/>
                    </Border>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel>
                    <TextBlock Text="Додатково" Style="{StaticResource SectionTitle}"/>
                    <StackPanel Margin="25,0,25,20">
                        <TextBlock Text="Посилання" Style="{StaticResource FieldLabel}"/>
                        <TextBlock FontSize="14" Margin="0,0,0,10">
                            <Hyperlink NavigateUri="https://farmsteadhelper.pythonanywhere.com/static/terms_of_use.pdf"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                Умови Використання
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14">
                            <Hyperlink NavigateUri="https://farmsteadhelper.pythonanywhere.com/static/privacy_policy.pdf"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                Політика Конфіденційності
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCard}" BorderBrush="#D9534F" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Небезпечна зона" Style="{StaticResource SectionTitle}" Foreground="#D9534F"/>
                    <StackPanel Margin="25,0,25,20">
                        <TextBlock Text="Видалення акаунта" 
                                   Style="{StaticResource FieldLabel}" 
                                   Foreground="#D9534F"/>
                        <TextBlock Text="Ця дія є незворотною. Всі ваші дані, включно з усіма створеними мапами, будуть видалені назавжди." 
                                   TextWrapping="Wrap" Foreground="#444"/>
                    </StackPanel>

                    <Border Style="{StaticResource CardFooter}">
                        <Button Content="Видалити акаунт" Style="{StaticResource DangerButton}" 
                                HorizontalAlignment="Right" 
                                Click="DeleteAccount_Click"/>
                    </Border>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>