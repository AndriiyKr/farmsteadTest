<Window x:Class="FarmsteadMap.WPF.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmsteadMap.WPF"
        mc:Ignorable="d"
        Title="SplashScreenWindow" Height="300" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="FillingProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#44FFFFFF" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Height" Value="4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="TemplateRoot">
                            <Border x:Name="PART_Track" 
                                    CornerRadius="2" 
                                    Background="{TemplateBinding Background}" />

                            <Border x:Name="PART_Indicator" 
                                    CornerRadius="2" 
                                    Background="{TemplateBinding Foreground}" 
                                    HorizontalAlignment="Left" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="10" Background="Transparent">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="Black" Opacity="0.4"/>
            </Border.Effect>
        </Border>

        <Border CornerRadius="10" ClipToBounds="True">
            <Grid>
                <Image Source="/Images/baner_background.jpg" Stretch="UniformToFill" />

                <Border Background="#99000000" />

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <Grid Width="128" Height="128" Margin="10">

                        <Grid.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="5" Color="Black" Opacity="0.5"/>
                        </Grid.Effect>

                        <Border Background="White"
                                CornerRadius="64" />
                        <Image Source="/Images/logo.png" 
                               Stretch="Uniform" />
                    </Grid>

                    <TextBlock Text="Farmstead Map"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="Verdana"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="10">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Color="Black" Opacity="0.7"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <ProgressBar x:Name="LoadingProgressBar"
                                 Minimum="0"
                                 Maximum="100"
                                 Width="300" 
                                 Margin="10,0,10,20"
                                 Style="{StaticResource FillingProgressBar}" />

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>